import * as yup from 'yup';
import {
  ConvectorModel,
  Default,
  ReadOnly,
  Required,
  Validate
} from '@worldsibu/convector-core-model';

export abstract class TimeRecord<T extends TimeRecord<any>> extends ConvectorModel<T> {
  @ReadOnly()
  @Required()
  @Validate(yup.number())
  public created: number;

  @Required()
  @Validate(yup.number())
  public modified: number;
}

export class <%= name %> extends TimeRecord<<%= name %>> {
  @ReadOnly()
  @Required()
  public readonly type = 'io.worldsibu.<%= name %>';

  @Required()
  @Validate(yup.string())
  public name: string;
}
